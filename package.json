{
  "name": "site-svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn run build:tailwind && rollup -c",
    "dev": "yarn run dev:tailwind && rollup -c -w",
    "dev:win": "yarn run dev:tailwind:win && rollup -c -w",
    "start": "sirv public --single",
    "build:tailwind": "NODE_ENV=production npx postcss node_modules/tailwindcss/dist/tailwind.min.css -o public/build/tailwincss.css",
    "dev:tailwind": "cp node_modules/tailwindcss/dist/tailwind.css public/build/tailwincss.css",
    "dev:tailwind:win": "copy node_modules\\tailwindcss\\dist\\tailwind.css public\\build\\tailwincss.css",
    "prettier": "npx prettier --write src",
    "ci": "npx svelte-check"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/svelte": "^3.0.0",
    "node-sass": "^6.0.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "bootstrap-icons": "^1.3.0",
    "marked": "^4.0.6",
    "page.js": "^4.13.3",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "svelte-terminal": "candywater/svelte-terminal#master",
    "tailwindcss": "^2.0.2"
  }
}
