{
    "name": "site-svelte-app",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "pnpm dev:dev",
        "dev:dev": "vite build -w",
        "dev:serve": "vite",
        "gulp": "gulp -f gulpfile.cjs",
        "gulp:dev": "gulp -f gulpfile.cjs watch",
        "start": "sirv public --single",
        "build:tailwind": "NODE_ENV=production npx postcss node_modules/tailwindcss/dist/tailwind.css -o public/build/tailwind/tailwind.css",
        "dev:tailwind": "cp node_modules/tailwindcss/dist/tailwind.css public/build/tailwind/tailwind.css",
        "dev:tailwind:win": "copy node_modules\\tailwindcss\\dist\\tailwind.css public\\build\\tailwind\\tailwincss.css",
        "prettier": "npx prettier --write src",
        "ci": "npx svelte-check",
        "postinstall": "pnpm run build"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@tsconfig/svelte": "^3.0.0",
        "autoprefixer": "^10.4.1",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-purgecss": "^4.1.3",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "node-sass": "^6.0.1",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.1",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.45.2",
        "sirv-cli": "^1.0.0",
        "svelte": "^3.0.0",
        "svelte-check": "^2.2.11",
        "svelte-preprocess": "^4.10.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@shopify/draggable": "1.0.0-beta.8",
        "@sveltejs/vite-plugin-svelte": "1.0.0-next.42",
        "animate.css": "^4.1.1",
        "bootstrap-icons": "^1.3.0",
        "cssnano": "^5.0.14",
        "highlight.js": "^11.4.0",
        "howler": "^2.2.3",
        "marked": "^4.0.6",
        "page.js": "^4.13.3",
        "svelte-terminal": "github:candywater/svelte-terminal#55bdce887d5776a6b791f71519abf08c2d2d1473",
        "tailwindcss": "^3.0.13",
        "vite": "^2.9.6"
    }
}