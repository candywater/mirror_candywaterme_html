{
    "name": "site-svelte-app",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "pnpm dev:dev",
        "dev:dev": "vite --mode development build -w --sourcemap true",
        "dev:serve": "vite",
        "gulp": "gulp -f gulpfile.cjs",
        "gulp:dev": "gulp -f gulpfile.cjs watch",
        "start": "sirv public --single",
        "prettier": "npx prettier --write src",
        "ci": "npx svelte-check",
        "help": "echo \"dev: tmux => pnpm dev | pnpm gulp:dev; \nbuild: pnpm gulp => pnpm build\"",
        "postinstall": "pnpm run build",
        "install:win": "pnpm install --config.https-proxy=http://127.0.0.1:7890 --config.proxy=http://127.0.0.1:7890"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@tsconfig/svelte": "^3.0.0",
        "autoprefixer": "^10.4.16",
        "express": "^4.18.2",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-purgecss": "^4.1.3",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "postcss": "^8.4.33",
        "postcss-cli": "^9.1.0",
        "prettier": "^2.8.8",
        "prettier-plugin-svelte": "^2.10.1",
        "rollup": "^2.79.1",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.6",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.69.7",
        "sirv-cli": "^1.0.14",
        "svelte": "^3.59.2",
        "svelte-check": "^2.10.3",
        "svelte-preprocess": "^4.10.7",
        "tslib": "^2.6.2",
        "typescript": "^4.9.5",
        "vite": "^2.9.16"
    },
    "dependencies": {
        "@shopify/draggable": "1.0.0-beta.8",
        "@sveltejs/vite-plugin-svelte": "1.0.0-next.42",
        "animate.css": "^4.1.1",
        "bootstrap-icons": "^1.11.3",
        "cssnano": "^5.1.15",
        "highlight.js": "^11.9.0",
        "howler": "^2.2.4",
        "marked": "^4.3.0",
        "page.js": "^4.13.3",
        "svelte-terminal": "github:candywater/svelte-terminal#55bdce887d5776a6b791f71519abf08c2d2d1473",
        "tailwindcss": "^3.4.1"
    }
}