{
  "name": "site-svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn run build:tailwind && rollup -c",
    "dev": "yarn run dev:tailwind && rollup -c -w",
    "start": "sirv public --single",
    "build:tailwind": "NODE_ENV=production npx postcss node_modules/tailwindcss/dist/tailwind.min.css -o public/build/tailwincss.css",
    "dev:tailwind": "cp node_modules/tailwindcss/dist/tailwind.css public/build/tailwincss.css"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "autoprefixer": "^10.2.1",
    "node-sass": "^5.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.6.1"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "bootstrap-icons": "^1.3.0",
    "marked": "^2.0.0",
    "page.js": "^4.13.3",
    "postcss-cli": "^8.3.1",
    "sirv-cli": "^1.0.0",
    "svelte-terminal": "candywater/svelte-terminal#master",
    "tailwindcss": "^2.0.2"
  }
}
